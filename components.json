{
  "$schema": "https://ui.shadcn.com/schema.json",
  "style": "default",
  "rsc": true,
  "tsx": true,
  "tailwind": {
    "config": "tailwind.config.ts",
    "css": "app/globals.css",
    "baseColor": "neutral",
    "cssVariables": true,
    "prefix": "",
    "darkMode": "class",
    "theme": {
      "extend": {
        "colors": {
          "primary": "#1D4ED8",
          "secondary": "#9333EA"
        },
        "fontFamily": {
          "sans": ["Inter", "sans-serif"],
          "serif": ["Merriweather", "serif"]
        }
      }
    },
    "plugins": ["@tailwindcss/forms", "@tailwindcss/typography"]
  },
  "aliases": {
    "components": "@/components",
    "utils": "@/lib/utils",
    "ui": "@/components/ui",
    "lib": "@/lib",
    "hooks": "@/hooks",
    "context": "@/context",
    "services": "@/services",
    "assets": "@/assets"
  },
  "iconLibrary": "lucide"
}
